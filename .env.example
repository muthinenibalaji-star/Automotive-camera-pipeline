# Automotive Camera Pipeline - Environment Configuration
# Copy this file to .env and modify as needed

# Device Configuration
# Options: "cuda" (GPU) or "cpu"
DEVICE=cpu

# Model Configuration  
# Path to model weights (downloaded via mim download)
MODEL_WEIGHTS=models/rtmdet_tiny_8xb32-300e_coco_20220902_112414-78e30dcc.pth

# Detection Thresholds
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.45

# Video Source
# Use 0 for webcam, or path to video file
VIDEO_SOURCE=0

# Output Settings
OUTPUT_DIR=data/output
SAVE_VISUALIZATIONS=true

# Logging
LOG_LEVEL=INFO
